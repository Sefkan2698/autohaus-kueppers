# PostgreSQL Database Configuration
POSTGRES_USER=userdb
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_DB=kueppersdb

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET
JWT_EXPIRES_IN=7d

# Master Registration Key (für Admin-Registrierung)
MASTER_REGISTRATION_KEY=CHANGE_THIS_TO_A_STRONG_KEY

# Mail Server Configuration
# Für Production solltest du einen echten SMTP Server verwenden (z.B. SendGrid, Mailgun, etc.)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@your-domain.de
MAIL_TO=kontakt@your-domain.de

# Frontend API URL
# Option 1: Direkt zum Backend-Port (einfacher, aber Port muss offen sein)
NEXT_PUBLIC_API_URL=http://deine-domain.de:3001
# Option 2: Über Nginx /api Route (empfohlen, siehe nginx.conf.example)
# NEXT_PUBLIC_API_URL=/api
# Option 3: Für lokales Testing
# NEXT_PUBLIC_API_URL=http://localhost:3001
